@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;

@if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
{
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <ul class="navbar-nav flex-grow-1">
            <li>
                <a class="nav-link text-dark" asp-area="" asp-controller="Entradas" asp-action="Create">Entradas</a>
            </li>
            <li>
                <span class="nav-link text-dark">Bem-vindo, @HttpContextAccessor.HttpContext.User.Identity.Name!</span>
            </li>
            <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
            <li>
                <button type="submit" class="nav-link text-dark">Sair</button>
            </li>
            </form>
        </ul>
    </div>
    
}
else
{
    <li >
        <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Entrar</a>
    </li>
}
